@model IEnumerable<PersonelTakip.Models.Tbl_Personel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Personel Listesi</h2>

<p>
    @Html.ActionLink("Yeni Personel Ekle", "Ekle", null, new { @class = "btn btn-primary mb-3" })
</p>
<p>
    @using (Html.BeginForm("Index", "Personel", FormMethod.Get))
    {
        <div class="row mb-3">
            <div class="col-md-4">
                <label>Şehir</label>
                @Html.DropDownList("sehirId", (SelectList)ViewBag.SehirId, "Tüm Şehirler", new { @class = "form-control" })
            </div>
            <div class="col-md-4">
                <label>Rütbe</label>
                <input type="text" name="rutbe" value="@ViewBag.Rutbe" class="form-control" />
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-info">Filtrele</button>
            </div>
        </div>
    }
</p>

<div class="mb-3">
    @Html.ActionLink("PDF Olarak Dışa Aktar", "PdfRapor", "Personel", null, new { @class = "btn btn-danger me-2" })
    @Html.ActionLink("Excel Olarak Dışa Aktar", "ExcelRapor", "Personel", null, new { @class = "btn btn-success" })
</div>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().PerAd)</th>
            <th>@Html.DisplayNameFor(model => model.First().PerSoyad)</th>
            <th>@Html.DisplayNameFor(model => model.First().PerSicil)</th>
            <th>@Html.DisplayNameFor(model => model.First().PerRutbe)</th>
            <th>Şehir</th>
            <th>İHA Türü</th>
            <th>Kurs</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.PerAd</td>
                <td>@item.PerSoyad</td>
                <td>@item.PerSicil</td>
                <td>@item.PerRutbe</td>
                <td>@item.iller.sehir</td>
                <td>@item.Tbl_IhaTuru.TurAd</td>
                <td>@item.Tbl_PersonelKurs.PersonelKursAd</td>
                <td>
                    @Html.ActionLink("Güncelle", "Guncelle", new { id = item.ID }, new { @class = "btn btn-sm btn-warning me-1" })
                    @Html.ActionLink("Sil", "Sil", new { id = item.ID }, new { @class = "btn btn-sm btn-danger", onclick = "return confirm('Silmek istediğinize emin misiniz?');" })
                </td>
            </tr>
        }
    </tbody>
</table>